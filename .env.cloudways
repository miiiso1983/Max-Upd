# =============================================================================
# MaxCon SaaS - Cloudways Production Environment Configuration
# =============================================================================

# Application Settings
APP_NAME="MaxCon SaaS"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_USING_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=Asia/Baghdad

# Localization Settings (Arabic/Iraq)
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ar_SA

# Security Settings
APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single,daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error
LOG_DAILY_DAYS=14

# Database Configuration (MySQL on Cloudways)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password

# Landlord Database (for Multi-tenancy)
LANDLORD_DB_CONNECTION=mysql
LANDLORD_DB_HOST=127.0.0.1
LANDLORD_DB_PORT=3306
LANDLORD_DB_DATABASE=maxcon_landlord
LANDLORD_DB_USERNAME=your_landlord_db_username
LANDLORD_DB_PASSWORD=your_landlord_db_password

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=1440
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com
SESSION_SECURE_COOKIES=true
SESSION_SAME_SITE=lax

# Cache Configuration (Redis recommended for Cloudways)
CACHE_STORE=redis
CACHE_PREFIX=maxcon_cache

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Broadcasting
BROADCAST_CONNECTION=log

# File Storage
FILESYSTEM_DISK=local
FILESYSTEM_CLOUD=s3

# Redis Configuration (Available on Cloudways)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail Configuration (SMTP recommended for production)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# WhatsApp Integration (for payment receipts)
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_BUSINESS_NUMBER=+964xxxxxxxxx

# PDF Generation Settings
DOMPDF_ENABLE_REMOTE=true
DOMPDF_ENABLE_CSS_FLOAT=true
DOMPDF_ENABLE_HTML5_PARSER=true
DOMPDF_DEFAULT_FONT=DejaVu Sans
DOMPDF_DEFAULT_PAPER_SIZE=a4
DOMPDF_DEFAULT_PAPER_ORIENTATION=portrait

# Excel Import/Export Settings
EXCEL_CACHE_DRIVER=redis
EXCEL_TEMPORARY_FILES_PATH=storage/framework/laravel-excel

# QR Code Settings
QR_CODE_SIZE=200
QR_CODE_MARGIN=2
QR_CODE_FORMAT=png

# Security & Encryption
ENCRYPTION_KEY=base64:GENERATE_32_CHAR_RANDOM_STRING
JWT_SECRET=GENERATE_JWT_SECRET_KEY
TWO_FACTOR_ENCRYPTION_KEY=base64:GENERATE_ANOTHER_32_CHAR_STRING

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT=100

# Backup Configuration
BACKUP_DISK=s3
BACKUP_ENCRYPTION_PASSWORD=your_backup_encryption_password
BACKUP_SCHEDULE_ENABLED=true
BACKUP_RETENTION_DAYS=30

# AWS S3 Configuration (for file storage and backups)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=maxcon-saas-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# Cloudways Specific Settings
CLOUDWAYS_SERVER_ID=your_server_id
CLOUDWAYS_APP_ID=your_app_id

# Multi-tenancy Settings
TENANCY_ENABLED=true
TENANT_DATABASE_PREFIX=tenant_
TENANT_CACHE_PREFIX=tenant_cache_
TENANT_SESSION_PREFIX=tenant_session_

# Performance Settings
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=256
OPCACHE_MAX_ACCELERATED_FILES=20000

# Monitoring & Analytics
SENTRY_LARAVEL_DSN=your_sentry_dsn_if_using
GOOGLE_ANALYTICS_ID=your_ga_id_if_using

# API Keys for External Services
GOOGLE_MAPS_API_KEY=your_google_maps_key_if_needed
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_key_if_needed

# Development Tools (Disabled in Production)
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
IGNITION_ENABLED=false
IGNITION_SHARING_ENABLED=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_APP_ENV="${APP_ENV}"
VITE_APP_URL="${APP_URL}"

# Custom MaxCon Settings
MAXCON_VERSION=1.0.0
MAXCON_SUPPORT_EMAIL=support@your-domain.com
MAXCON_COMPANY_NAME="MaxCon Solutions"
MAXCON_COMPANY_ADDRESS="Baghdad, Iraq"
MAXCON_COMPANY_PHONE="+964xxxxxxxxx"

# License Management
LICENSE_CHECK_ENABLED=true
LICENSE_SERVER_URL=https://license.your-domain.com
LICENSE_VALIDATION_INTERVAL=24

# Regulatory Affairs Module
REGULATORY_AUTHORITY_NAME="Iraqi Ministry of Health"
REGULATORY_AUTHORITY_CODE="MOH_IQ"
REGULATORY_COMPLIANCE_LEVEL=strict

# Iraqi Localization
IRAQ_CURRENCY_CODE=IQD
IRAQ_CURRENCY_SYMBOL="د.ع"
IRAQ_TAX_RATE=0.00
IRAQ_BUSINESS_HOURS_START=08:00
IRAQ_BUSINESS_HOURS_END=16:00
IRAQ_WEEKEND_DAYS="friday,saturday"

# Notification Settings
NOTIFICATION_CHANNELS=database,mail
NOTIFICATION_QUEUE_ENABLED=true
NOTIFICATION_RETENTION_DAYS=90

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true
HSTS_ENABLED=true

# API Configuration
API_VERSION=v1
API_RATE_LIMIT_ENABLED=true
API_DOCUMENTATION_ENABLED=false

# Maintenance Mode
MAINTENANCE_MODE_SECRET=your_maintenance_secret_key
MAINTENANCE_MODE_TEMPLATE=custom

# Error Reporting
ERROR_REPORTING_ENABLED=true
ERROR_NOTIFICATION_EMAIL=admin@your-domain.com

# Backup Verification
BACKUP_VERIFICATION_ENABLED=true
BACKUP_TEST_RESTORE_ENABLED=false

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
SLOW_QUERY_THRESHOLD=2000

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MOBILE_APP_API=false
FEATURE_THIRD_PARTY_INTEGRATIONS=true
FEATURE_ADVANCED_REPORTING=true

# Social Login (if needed)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
